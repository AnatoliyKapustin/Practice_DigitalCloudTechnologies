<Application
    x:Class="DatMailReader.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:DatMailReader.ViewModels.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008">


    <Application.Resources>
        <!-- Application-specific resources -->
        <ResourceDictionary>
            <SolidColorBrush x:Key="PivotHeaderForegroundSelectedBrush" Color="#FF3BA3F9" />
            <SolidColorBrush x:Key="PivotHeaderForegroundUnselectedBrush" Color="#FF9EB3FD" />
            <x:Double x:Key="PivotHeaderItemFontSize">40</x:Double>
            <x:String x:Key="AppName">Dat</x:String>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
