    <ControlTemplate x:Key="RectangleOpenFileButton" TargetType="Button">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ContentPresenter
                Name="Icon"
                Margin="0 0 24 0"
                Content="{TemplateBinding ContentTemplate}" 
                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                HorizontalAlignment="Right"
                Canvas.ZIndex="1"/>
            <TextBlock
                Name="Content"
                Text="{TemplateBinding Content}"
                FontSize="{TemplateBinding FontSize}"
                Foreground="{TemplateBinding Foreground}" 
                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                HorizontalAlignment="Left"
                FontWeight="Light"
                Canvas.ZIndex="1"
                Grid.Column="1"/>
            <Rectangle
                Name="Rectangle" 
                Fill="{TemplateBinding Background}" 
                Height="{TemplateBinding Height}" 
                Width="{TemplateBinding Width}"
                Grid.ColumnSpan="2"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <PointerDownThemeAnimation TargetName="Icon"/>
                            <PointerDownThemeAnimation TargetName="Rectangle"/>
                            <PointerDownThemeAnimation TargetName="Content"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="RectangleButton" TargetType="Button">
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#0090ff"/>
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="FontWeight" Value="Light"/>
    </Style>

    <Style x:Key="XButton" TargetType="Button">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#FF3BA3F9"/>
        <Setter Property="Margin" Value="18,0,0,0"/>
        <Setter Property="Background" Value="{x:Null}"/>
    </Style>

    <ControlTemplate x:Key="XButtonContent" TargetType="Button">
        <Grid>
            <FontIcon 
                Name="Icon" 
                Glyph="{TemplateBinding Content}" 
                Foreground="{TemplateBinding Foreground}" 
                HorizontalAlignment="{TemplateBinding HorizontalAlignment}" 
                VerticalAlignment="{TemplateBinding VerticalAlignment}" 
                FontSize="{TemplateBinding FontSize}" 
                Canvas.ZIndex="1"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames 
                                            Storyboard.TargetProperty="Foreground" 
                                            Storyboard.TargetName="Icon">
                                <DiscreteObjectKeyFrame 
                                                KeyTime="0" 
                                                Value="Red"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames 
                                            Storyboard.TargetProperty="Foreground" 
                                            Storyboard.TargetName="Icon">
                                <DiscreteObjectKeyFrame 
                                                KeyTime="0" 
                                                Value="DarkBlue"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Name="HorizontalGridViewWithFilesStyle" TargetType="GridView">
        <Setter Property="IsItemClickEnabled" Value="True"/>
        <Setter Property="SelectionMode" Value="None"/>
        <Setter Property="Padding" Value="120,0,0,10"/>
        <Setter Property="Margin" Value="-3,24,0,54"/>
    </Style>

    <Style x:Name="VerticalGridViewWithFilesStyle" TargetType="GridView">
        <Setter Property="IsItemClickEnabled" Value="True"/>
        <Setter Property="SelectionMode" Value="None"/>
        <Setter Property="ScrollViewer.VerticalScrollMode" Value="Enabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Padding" Value="120,0,0,10"/>
        <Setter Property="Margin" Value="-3,24,0,54"/>
    </Style>

