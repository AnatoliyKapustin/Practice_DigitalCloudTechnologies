    <Style x:Key="RecentFilesTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#0090ff"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>
    
    <i:BehaviorCollection x:Key="TextBlockBehaviors">
        <tcore:EventTriggerBehavior EventName="PointerEntered">
            <tcore:ChangePropertyAction PropertyName="Foreground" 
                                        Value="Red"/>
        </tcore:EventTriggerBehavior>
        <tcore:EventTriggerBehavior EventName="PointerExited">
            <tcore:ChangePropertyAction PropertyName="Foreground"
                                        Value="#0090ff"/>
        </tcore:EventTriggerBehavior>
        <tcore:EventTriggerBehavior EventName="PointerPressed">
            <tcore:ChangePropertyAction PropertyName="Foreground"
                                        Value="DarkBlue"/>
        </tcore:EventTriggerBehavior>
    </i:BehaviorCollection>
    
    <Style x:Key="GridViewVectorImageStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="24,0,24,0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="SelectionHighlightColor" Value="{x:Null}"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
    </Style>

    <Style x:Key="GridViewTextBlockStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
    </Style>

    <Style x:Key="GridViewFromTextBox" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
    </Style>

    <Style x:Key="TextBlockMessageSenderInformation" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,18,18"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="Foreground" Value="#737373"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="SubjectTextBlockStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Margin" Value="-3,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#0090ff"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="45"/>
    </Style>

